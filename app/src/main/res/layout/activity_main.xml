<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#00A19B"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="40dp"/>

        <!-- Card de estado del permiso -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado_del_permiso"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificando..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btnPermiso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar Permiso"
                    android:layout_marginTop="12dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de control ON/OFF -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control de Captura"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activa/Desactiva el registro"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de estado de captura -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEstadoCaptura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verificando estado..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de optimizaciones -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚡ Optimizaciones Recomendadas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00A19B"
                    android:layout_marginBottom="12dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para asegurar que el servicio funcione siempre:"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvEstadoBateria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⚠️ Optimización de batería activa"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/btnBateria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Configurar"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAppSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Configuración de la App"
                    android:layout_marginTop="4dp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instrucciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Instrucciones:\n\n1. Presiona 'Configurar Permiso'\n2. Busca 'Yape Listener' en la lista\n3. Activa el interruptor\n4. Vuelve a la app\n5. Activa el switch de captura\n6. ¡Listo! Las transacciones se registrarán automáticamente"
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:background="#F5F5F5"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>